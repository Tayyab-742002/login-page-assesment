// Datasource configuration for Neon PostgreSQL
datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// Prisma Client generator
generator client {
    provider = "prisma-client-js"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
